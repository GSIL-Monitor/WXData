@{
    ViewBag.Title = "系统用户管理";
}
@section styles{

    <style>
        .marg {
            margin: 0;
        }

        .pad {
            padding: 0;
        }

        .datalist a {
            font-size: 12px;
            color: rgb(119,119,119);
        }

        .datalist {
            font-size: 12px;
            border: 1px solid #f5f5f5;
            box-shadow: 0 1px 1px rgba(0,0,0,.05);
        }

        .datacontent .page-header {
            margin: 20px 20px;
        }

        .operation .btn {
            padding: 1px 5px;
            margin: 2px;
        }

        .operation a {
            color: white;
        }

        .fromcontent {
            max-height: 380px;
            overflow-y: scroll;
        }

            .fromcontent::-webkit-scrollbar {
                width: 5px;
            }

            .fromcontent::-webkit-scrollbar-thumb {
                background-color: #217fbd;
                border-radius: 5px;
            }

        .topfind .form-group {
            padding-right: 8px;
        }

        .topfind {
            margin-top: 5px;
        }

        .icolor {
            color: white;
        }

        .usercontent {
            display: flex;
        }

        .usetlef {
            border: 1px solid #ccc;
            width: 18%;
        }
    </style>
}

<div class="usercontent">
    <div class="col-xs-2 padd usetlef">
        <nav class="navbar marg  navbar-default navbar-static-top">
            <div class="col-xs-12">
                <h5 class="navbar-text navbar-left">用户分类<a href="#" class="navbar-link"></a></h5>
            </div>
        </nav>
        <div>
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
                <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home">...</div>
                <div role="tabpanel" class="tab-pane" id="profile">...</div>
            </div>
        </div>
    </div>
    <div class="col-xs-10 padd">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="rightheadingone">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseRight" aria-expanded="true" aria-controls="collapseRight">
                            查询内容
                        </a>
                    </h4>
                </div>
                <div id="collapseRight" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="rightheadingone">
                    <div class="panel-body">
                        <div class="col-xs-11">
                            <div class="form-inline topfind">
                                <div class="form-group">
                                    <label for="">用户编码:</label>
                                    <input type="text" class="form-control" id="" placeholder="用户编码">
                                </div>
                                <div class="form-group">
                                    <label for="">&emsp;用户名:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail2" placeholder="用户名">
                                </div>
                                <div class="form-group">
                                    <label for="">真实姓名:</label>
                                    <input type="text" class="form-control" id="Email1" placeholder="真实姓名">
                                </div>
                            </div>
                            <div class="form-inline topfind">
                                <div class="form-group">
                                    <label for="">移动电话:</label>
                                    <input type="text" class="form-control" id="" placeholder="移动电话">
                                </div>
                                <div class="form-group">
                                    <label for="">邮件地址:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail2" placeholder="邮件地址">
                                </div>
                                <div class="form-group">
                                    <label for="">&nbsp;&nbsp;QQ号码:</label>
                                    <input type="text" class="form-control" id="Email1" placeholder="QQ号码">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-1">
                            <div>
                                <a href="#" class="btn btn-default">查询</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="datalist">
                <nav class="navbar marg  navbar-default navbar-static-top">
                    <div class="col-xs-12">
                        <h5 class="navbar-text navbar-left">数据列表<a href="#" class="navbar-link"></a></h5>
                        <div class="navbar-text navbar-right ">
                            <ul class="list-inline marg">
                                <li>
                                    <i class="glyphicon glyphicon-plus"></i>
                                    <a href="/Base/SYSUser/AddSysUser" data-toggle="modal" data-target="#EditSysUser">新增</a>
                                </li>
                                <li><i class="glyphicon glyphicon-pencil"></i><a href="#">修改</a></li>
                                <li><i class="glyphicon glyphicon-list"></i><a href="#">查看</a></li>
                                <li><i class="glyphicon glyphicon-minus"></i><a href="#">删除</a></li>
                                <li><i class="glyphicon glyphicon-refresh"></i><a href="#">刷新</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <div class="datacontent">
                    <div class="page-header">
                        <ul class="list-inline">
                            <li>
                                每页显示
                                <select>
                                    <option value="value">5</option>
                                    <option value="value">10</option>
                                </select>
                                条记录
                            </li>
                            <li>共有记录：<span>50</span>条</li>
                            <li>总页数：<span>10</span>页</li>
                        </ul>
                    </div>
                    <div class="fromcontent">
                        <table class="table table-bordered table-hover userList">
                            <thead>
                                <tr class="text-center">
                                    <th><input type="checkbox" name="name" /></th>
                                    <th>ID</th>
                                    @*<th>用户编码</th>*@
                                    <th>用户名/登陆名</th>
                                    <th>真实姓名</th>
                                    <th>用户等级</th>
                                    <th>用户状态</th>
                                    @*<th>是否删除</th>*@
                                    <th>移动电话</th>
                                    <th>邮件地址</th>
                                    @*<th>性别</th>*@
                                    <th>二维码</th>
                                    <th>重置密码</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <li class="disabled marg">
                                    <a href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                                <li class=""><a href="#">2 <span class="sr-only">(current)</span></a></li>
                                <li>
                                    <a href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>

                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();

        //拉取用户信息填充表格
        $.post("/Base/SYSUser/GetUsers", "", function (json) {
            var tr = "";
            $.each(json, function (i, obj) {
                tr += "<tr class=\"text-center\">" +
                           "<td>" +
                           "    <input type=\"checkbox\" name=\"name\" value=\"\" />" +
                           "</td>" +
                           "<td>" + obj.UserId + "</td>" +
                           "<td>" + obj.LoginId + "</td>" +
                           "<td>" + obj.UserName + "</td>" +
                           "<td>" + obj.RoleName + "</td>" +
                           "<td>" + obj.UserState + "</td>" +
                           "<td>" + obj.Telphone + "</td>" +
                           "<td>" + obj.Email + "</td>" +
                           "<td> <a href=\"#\" class=\"btn btn-info\">" +
                           "    <span class=\"glyphicon glyphicon-qrcode icolor\"></span></a></td>" +
                           "<td> <a href=\"#\" class=\"btn btn-info\">" +
                           "   <span class=\"glyphicon glyphicon-wrench icolor\"></span></a> </td>" +
                           "<td>" +
                               "<ul class=\"list-inline marg operation\">" +
                                   "<li class=\"Find btn btn-success\" data-toggle=\"tooltip\" data-placement=\"right\" title=\"查看\">" +
                                   "   <a href=\"#\" class=\"glyphicon glyphicon-search\"></a></li>" +
                                   "<li class=\"Upda btn btn-info\" data-toggle=\"tooltip\" data-placement=\"right\" title=\"修改\">" +
                                   "   <a href=\"/SYSUser/ToUpdateSysUser/" + obj.UserId + "\" data-toggle=\"modal\" data-target=\"#UpdateSysUser\" class=\"glyphicon glyphicon-pencil\"></a></li>" +
                                   "<li class=\"Dele btn btn-danger\" data-toggle=\"tooltip\" data-placement=\"right\" title=\"删除\">" +
                                   "   <a href=\"#\" class=\"glyphicon glyphicon-remove\"></a></li>" +
                               "</ul>" +
                           "</td>" +
                       "</tr>";

            });
            $(".userList tbody").html(tr);
            console.info(tr);
        });
        //拉取用户信息填充表格end
    })


    </script>

}
