@using WXDataModel
@{
    ViewBag.Title = "管理订阅用户";
    List<WX_UserTag> TagList = ViewBag.TagList as List<WX_UserTag>;
    List<WX_UserGroup> GroupList = ViewBag.GroupList as List<WX_UserGroup>;
}
@section styles{

    <link href="~/Content/Common.css" rel="stylesheet" />
    <style>
        .nav>li>a {
            padding: 5px;
            font-size:13px;
        }
        .form-group label{
            height:34px;
            line-height:34px;
        }
        .UserGroup .panel {
            margin-bottom: 0;
        }
        .UserGroup .panel-heading {
            background-color: #fff; 
        }
        .UserGroup .panel-title a{
            font-size:13px;
            border:none;
        }
    </style>
}

<div class="usercontent">
    <div class="col-xs-2 padd usetlef">
        <nav class="navbar marg  navbar-default navbar-static-top">
            <div class="col-xs-12">
                <h5 class="navbar-text navbar-left">用户分类<a href="#" class="navbar-link"></a></h5>
            </div>
        </nav>
        <div class="UserGroup">

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#TagList" aria-controls="TagList" role="tab" data-toggle="tab">按标签查看</a></li>
                <li role="presentation"><a href="#GroupList" aria-controls="GroupList" role="tab" data-toggle="tab">按分组查看</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="TagList">
                    @for (var i = 0; i < TagList.Count; i++)
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="Tag-heading-@i">
                                <h4 class="panel-title">
                                    <a role="button" class="" data-toggle="collapse" data-parent="#TagList" href="#Tag-collapse-@i" aria-expanded="true" aria-controls="Tag-collapse-@i">
                                        @TagList[i].TagName
                                    </a>
                                </h4>
                            </div>
                            <div id="Tag-collapse-@i" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@i">
                                <div class="panel-body">
                                    1
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div role="tabpanel" class="tab-pane" id="GroupList">
                    @for (var i = 0; i < GroupList.Count; i++)
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="Group-heading-@i">
                                <h4 class="panel-title">
                                    <a role="button" class="" data-toggle="collapse" data-parent="#GroupList" href="#Group-collapse-@i" aria-expanded="true" aria-controls="Group-collapse-@i">
                                        @GroupList[i].GroupName
                                    </a>
                                </h4>
                            </div>
                            <div id="Group-collapse-@i" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@i">
                                <div class="panel-body">
                                    2
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>

    </div>
    <div class="col-xs-10 padd">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="rightheadingone">
                    <h4 class="panel-title">
                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseRight" aria-expanded="true" aria-controls="collapseRight">
                            查询内容
                        </a>
                    </h4>
                </div>
                <div id="collapseRight" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="rightheadingone">
                    <div class="panel-body">
                        <div class="col-xs-11">
                            <div class="form-inline topfind">
                                <div class="form-group col-xs-6">
                                    <label for="S_OpenID" class="col-xs-3">用户编码:</label>
                                    <div class="col-xs-9"><input type="text" class="form-control" name="OpenID" id="S_OpenID" placeholder="用户编码"></div> 
                                </div>
                                <div class="form-group  col-xs-6">
                                    <label for="S_UserNick" class="col-xs-3">用户名:</label>
                                    <div class="col-xs-9"><input type="text" class="form-control" name="UserNick" id="S_UserNick" placeholder="用户名"></div>
                                </div>
                            </div>
                            <div class="form-inline topfind">
                                <div class="form-group col-xs-6">
                                    <label for="S_Telphone" class="col-xs-3">移动电话:</label>
                                    <div class="col-xs-9"><input type="text" class="form-control" name="Telphone" id="S_Telphone" placeholder="移动电话"></div>
                                </div>
                                <div class="form-group col-xs-6">
                                    <label for="S_Emial" class="col-xs-3">邮件地址:</label>
                                    <div class="col-xs-9"><input type="text" class="form-control" name="Emial" id="S_Emial" placeholder="邮件地址"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-1">
                            <div>
                                <a href="#" class="btn btn-default">查询</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="datalist">
                <nav class="navbar marg  navbar-default navbar-static-top">
                    <div class="col-xs-12">
                        <h5 class="navbar-text navbar-left">数据列表<a href="#" class="navbar-link"></a></h5>
                        <div class="navbar-text navbar-right ">
                            <ul class="list-inline marg">
                                <li>
                                    <i class="glyphicon glyphicon-plus"></i>
                                    <a href="#">新增</a>
                                </li>
                                <li><i class="glyphicon glyphicon-pencil"></i><a href="#">修改</a></li>
                                <li><i class="glyphicon glyphicon-list"></i><a href="#">查看</a></li>
                                <li><i class="glyphicon glyphicon-minus"></i><a href="#">删除</a></li>
                                <li><i class="glyphicon glyphicon-refresh"></i><a href="#" id="Refresh">刷新</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <div class="datacontent">
                    <div class="page-header">
                        <ul class="list-inline">
                            <li>
                                每页显示
                                <select>
                                    <option value="value">5</option>
                                    <option value="value">10</option>
                                </select>
                                条记录
                            </li>
                            <li>共有记录：<span>50</span>条</li>
                            <li>总页数：<span>10</span>页</li>
                            <li>只显示未分配的用户<input type="checkbox" id="showMode"/></li>
                        </ul>
                    </div>
                    <div class="fromcontent">
                        <table class="table table-bordered table-hover userList">
                            <thead>
                                <tr class="text-center">
                                    <th><input type="checkbox" name="name" /></th>
                                    <th>关注</th>
                                    <th>用户标识</th>
                                    <th>昵称</th>     
                                    <th>头像</th>
                                    <th>性别</th>
                                    <th>所在城市</th>
                                    <th>所在省份</th>
                                    <th>所在国家</th>
                                    <th>关注时间</th>
                                    <th>所属客服</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <li class="disabled marg">
                                    <a href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                                <li class=""><a href="#">2 <span class="sr-only">(current)</span></a></li>
                                <li>
                                    <a href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>

                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();

        
        LoadUser();

        $("#Refresh").click(function () {
            LoadUser();
        });

        $("#showMode").change(function () {
            LoadUser();
        });
    })


    function LoadUser() {
        //拉取用户信息填充表格
        var type = 1;
        if ($("#showMode").prop("checked")) {
            type = 2;
        }
        $.post("/WXUser/Home/GetUsers", "type="+type, function (json) {
            var tr = "";
            $.each(json, function (i, obj) {
                var temp = "";
                if (obj.SYS_UserName == "暂无所属客服") {
                    temp = "<li class=\"Dele btn btn-danger\" data-toggle=\"tooltip\" data-placement=\"right\" title=\"分配客服\">" + "   <a href=\"/WXUser/Home/AllotUser/" + obj.OpenID + "\" class=\"glyphicon glyphicon-user\" data-toggle='modal' data-target='#AllotUser'></a></li>";
                }
                tr += "<tr class=\"text-center\">" +
                           "<td>" +
                           "    <input type=\"checkbox\" name=\"name\" value=\"\" />" +
                           "</td>" +
                           "<td>" + obj.FollowStatus + "</td>" +
                           "<td>" + obj.OpenID + "</td>" +
                           "<td>" + obj.UserNick + "</td>" +
                           "<td><img style='width:40px' src=" + obj.HeadImageUrl + " alt=" + obj.UserNick + " /></td>" +
                           "<td>" + obj.UserSex + "</td>" +
                           "<td>" + obj.City + "</td>" +
                           "<td>" + obj.Province + "</td>" +
                           "<td>" + obj.Country + "</td>" +
                           "<td>" + obj.SubscribeTime + "</td>" +
                           "<td>" + obj.SYS_UserName + "</td>" +
                           "<td>" +
                               "<ul class=\"list-inline marg operation\">" +
                                   "<li class=\"Find btn btn-success\" data-toggle=\"tooltip\" data-placement=\"right\" title=\"查看\">" +
                                   "   <a href=\"/WXUser/Home/UserInfo/" + obj.OpenID + "\" data-toggle='modal' data-target='#EditWXUser' class=\"glyphicon glyphicon-search\"></a></li>" +

                                   //"<li class=\"Find btn btn-success\" data-toggle=\"tooltip\" data-placement=\"right\" title=\"修改分组\">" +
                                   //"   <a href=\"/WXUser/Home/ChangeGroup/" + obj.OpenID + "\" data-toggle='modal' data-target='#EditWXUser' class=\"glyphicon glyphicon-folder-open\"></a></li>" +


                                   temp +

                               "</ul>" +
                           "</td>" +
                       "</tr>";

            });
            $(".userList tbody").html(tr);
        });
        //拉取用户信息填充表格end
    }
    </script>

}
